<p id="notice"><%= notice %></p>

<h1>Email Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>List name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_subscribers.each do |email_subscriber| %>
      <tr>
        <td><%= email_subscriber.name %></td>
        <td><%= email_subscriber.email %></td>
        <td><%= email_subscriber.list_name %></td>
        <td><%= link_to 'Show', email_subscriber %></td>
        <td><%= link_to 'Edit', edit_email_subscriber_path(email_subscriber) %></td>
        <td><%= link_to 'Destroy', email_subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email Subscriber', new_email_subscriber_path %>
