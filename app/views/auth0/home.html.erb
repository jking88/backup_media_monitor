<!DOCTYPE html>
<html>
<head>
    <title>App Home</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.auth0.com/js/lock/10.2/lock.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#sidebar-btn').click(function() {
                $('#sidebar').toggleClass('visible');
                $('#body-container').toggleClass('visible');
                $('.hiddenImg').toggle();
            });
        });
        var lock = new Auth0Lock(
           'kBzeIKEv2OtFoZXrRwTrF1MX8KeT38kr',
           'bretzsam.auth0.com'
           );
          lock.on("authenticated", function(authResult) {
            lock.getProfile(authResult.idToken, function(error, profile) {
            sessionStorage.setItem('idToken', authResult.idToken);
            sessionStorage.setItem('profile', JSON.stringify(profile));
            var profile = sessionStorage.getItem("profile");
            document.getElementById("result").innerHTML = profile;
            document.getElementById('nick').innerHTML = profile.nickname;
            document.getElementById('user_pic').src = profile.picture_large;
              });
          });



    </script>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
</head>
<body>

    <div id="sidebar">
        <div id="sidebar-profie">
            <image id = 'user_pic' class="sidebarPic">
            <h3>Welcome <label id="nick"></label></h3>
        </div>
        <ul class=sidebarLinks>
            <li><a href="home"> <%= image_tag("homeIcon.png", id: "navbarImg") %> Home <%= image_tag("homeIcon.png", class: 'hiddenImg') %></a></li>

            <li><a href="profile"> <%= image_tag("profileIcon.png", id: "navbarImg") %> Profile <%= image_tag("profileIcon.png", class: 'hiddenImg') %></a></li>

            <li><a href="manage"> <%= image_tag("manageIcon.png", id: "navbarImg") %> Manage <%= image_tag("manageIcon.png", class: 'hiddenImg') %></a></li>

            <li><a href="search"> <%= image_tag("searchIcon.png", id: "navbarImg") %> Search <%= image_tag("searchIcon.png", class: 'hiddenImg') %></a></li>


            <li><a href="graphs"> <%= image_tag("graphsIcon.png", id: "navbarImg") %> Graphs <%= image_tag("graphsIcon.png", class: 'hiddenImg') %></a></li>

            <li><a href="settings"> <%= image_tag("settingsIcon.png", id: "navbarImg") %> Settings <%= image_tag("settingsIcon.png", class: 'hiddenImg') %></a></li>

            <li><a href="payment"> <%= image_tag("paymentIcon.png", id: "navbarImg") %> Payment <%= image_tag("paymentIcon.png", class: 'hiddenImg') %></a></li>

        </ul>

        <div id="sidebar-btn">
        <span></span>
        <span></span>
        <span></span>
        </div>

    </div>

    </div>
    </div>
    <div id="body-container">
        <div id="topHeader">
            <h2>Home</h2>
            <button onclick="lock.show()">Login</button>

        </div>
        <div id="col1">
            <div id="col-header">
                <h3>Current Websites</h3>
            </div>
            <div id="currentLinks">
            <label id="result"></label>

            </div>
        </div>
        <div id="col2">
            <div id="col-header">
                <h3>Live Feed</h3>
            </div>
            <div id="liveFeed">

            </div>
        </div>
        <div id="col3">
            <div id="col-header">
                <h3>Stats</h3>
            </div>
            <div id="recentStats">

            </div>
        </div>
    </div>





</body>
</html>